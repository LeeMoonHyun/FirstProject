<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="250"
	prefWidth="700">
	<padding>
		<Insets topRightBottomLeft="5" />
	</padding>
	<children>
		<Label text="운행정보 수정" layoutX="50" layoutY="30" />
		<Label text="No." layoutX="520" layoutY="40" />
		<TextField fx:id="txtEditNo" layoutX="545" layoutY="37"
			prefWidth="120" editable="false" />
		<Label text="출 발 지" layoutX="30" layoutY="80" />
		<TextField fx:id="txtEditDeparture" layoutX="85" layoutY="77"
			prefWidth="150" promptText="출발지(터미널 명) 입력" />
		<Label text="도 착 지" layoutX="260" layoutY="80" />
		<TextField fx:id="txtEditArrival" layoutX="315" layoutY="77"
			prefWidth="150" promptText="도착지(터미널 명) 입력" />
		<Label text="출발시간" layoutX="490" layoutY="80" />
		<TextField fx:id="txtEditStartTime" layoutX="545" layoutY="77"
			prefWidth="120" promptText="ex)01:11 = 0111" editable="false"/>
		<Label text="거    리" layoutX="30" layoutY="125" />
		<TextField fx:id="txtEditDistance" layoutX="85" layoutY="122"
			prefWidth="120" promptText="거리 입력(단위 : km)" />
		<Label text="소요시간" layoutX="260" layoutY="125" />
		<TextField fx:id="txtEditLeadTime" layoutX="315" layoutY="122"
			prefWidth="120" promptText="ex)01:11 = 0111" />
		<Label text="요    금" layoutX="490" layoutY="125" />
		<TextField fx:id="txtEditFee" layoutX="545" layoutY="122"
			prefWidth="120" promptText="요금 입력" />
		<Button text="수정정보 입력" fx:id="btnEditInput" layoutX="200"
			layoutY="185" prefWidth="100" />
		<Button text="취소" fx:id="btnEditCancel" layoutX="350" layoutY="185"
			prefWidth="100" />
	</children>
</AnchorPane>

